

<!--------BLOGPOST:INDEX---------->


<section id="contact" class="section coral">
    <div class="container">
        <h4 class="font-white">Posts from @User.Identity.Name</h4>

        <div class="blankdivider30">
        </div>
        <section id="blog" class="section">
            <div class="container">
                @foreach (var post in ViewBag.PostList)
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="home-post">
                                <div class="post-image">
                                    <img class="max-img" src="http://placehold.it/795x300" alt="" />
                                </div>                    
                                <div class="entry-content">
                                    <h5><strong>@post.Title | <span class="date">@post.Created</span></strong></h5>
                                    <div class="post-subtitle">@post.Teaser</div>
                                    <p>
                                        @post.Body
                                    </p>
                                    @Html.ActionLink("Edit", "Edit", "BlogPost", new { id = post.Id }, null)
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</section>