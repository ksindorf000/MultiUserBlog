@model IEnumerable<Blogit.Models.BlogPost>

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-lg-3">
        <h4>Title</h4>
    </div>
    <div class="col-lg-3">
        <h4>Author</h4>
    </div>
    <div class="col-lg-3">
        <h4>Teaser</h4>
    </div>
    <div class="col-lg-3">
        <h4>Created</h4>
    </div>
</div>

@foreach (var post in ViewBag.PostList)
{
    <div class="row">
        <div class="col-lg-3">
            @post.Title
        </div>
        <div class="col-lg-3">
            @post.Author
        </div>
        <div class="col-lg-3">
            @post.Teaser
        </div>
        <div class="col-lg-3">
            @post.Created
        </div>
    </div>
}